<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText android:id="@+id/etUsername" android:hint="Tên đăng nhập"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText android:id="@+id/etPassword" android:hint="Mật khẩu"
        android:inputType="textPassword" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Spinner android:id="@+id/spRole" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button android:id="@+id/btnRegister" android:text="Đăng ký"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
